@model MobLoot.Models.MonstersDetails

@{
    ViewBag.Title = "Delete";
}

<h2 class="titles">Delete Monster</h2>

<h3 class="boxtext">Are you sure you wish to delete <b>@Html.DisplayFor(model => model.MonsterName)</b>? :(</h3>
<div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <br />
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn button" />
        <br />
        <br />
        <p><a class="btn button" href="~/Monsters">Back</a></p>
    </div>
    }
</div>

<style>
    body{
        text-align: center;
    }
</style>